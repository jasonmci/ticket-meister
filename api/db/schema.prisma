datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Location {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  city        String
  state       String
  zip         String
  events      Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String
  datetime    DateTime
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int
  description String
}